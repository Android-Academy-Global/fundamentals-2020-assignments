<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workshop01.WS01Step02SolutionActivityB">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="@dimen/ws01_step02_activity_title_size"
        android:layout_height="@dimen/ws01_step02_activity_title_size"
        android:gravity="center"
        android:textSize="@dimen/ws01_step02_activity_title_sp"
        android:text="@string/ws01_step02_activity_b_title"
        android:textColor="@color/white"
        android:background="@color/colorColdPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_b_start_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/ws01_step02_activity_b_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
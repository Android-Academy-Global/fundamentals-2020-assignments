<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/tvDeviceActivityHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="@string/ws02_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvDeviceActivityReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvBoundIndicator"
        />

    <TextView
        android:id="@+id/tvBoundIndicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:background="@drawable/selector_bound_indicator_back"
        app:layout_constraintTop_toTopOf="@+id/tvDeviceActivityHeader"
        app:layout_constraintBottom_toBottomOf="@+id/tvDeviceActivityHeader"
        app:layout_constraintStart_toEndOf="@+id/tvDeviceActivityHeader"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvDeviceActivityReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="@string/ws02_activity_report_empty_text"
        app:layout_constraintTop_toBottomOf="@+id/tvDeviceActivityHeader"
        app:layout_constraintBottom_toTopOf="@+id/ivCompass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/ivCompass"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/img_compass_arrow"
        app:layout_constraintTop_toBottomOf="@+id/tvDeviceActivityReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnBindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/ws02_bind_service"
        app:layout_constraintBottom_toTopOf="@+id/btnUnbindService"
        />

    <Button
        android:id="@+id/btnUnbindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/ws02_unbind_service"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
